{
  "name": "Bearish Den Image Stitcher",
  "version": "1.1.0",
  "manifest_version": 3,
  "description": "Stitch your Bearish Den images into a single grid image.",

  "action": {
    "default_title": "Bearish Den Stitcher",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon3.png",
      "32": "icon3.png",
      "48": "icon3.png",
      "128": "icon3.png"
    }
  },

  "icons": {
    "16": "icon3.png",
    "32": "icon3.png",
    "48": "icon3.png",
    "128": "icon3.png"
  },

  "permissions": ["activeTab", "scripting", "downloads", "tabs", "storage"],

  "host_permissions": [
    "https://www.bearish.af/*",
    "https://bearish.s3.amazonaws.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  }
}

